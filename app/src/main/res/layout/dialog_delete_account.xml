<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_card"
    android:orientation="vertical"
    android:padding="@dimen/wl_space_l">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_m"
        android:text="Delete Account"
        android:textAppearance="@style/TextAppearance.Wellnest.Title" />

    <!-- Warning message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_l"
        android:text="This action cannot be undone. All your data will be permanently deleted."
        android:textAppearance="@style/TextAppearance.Wellnest.Body"
        android:textColor="@color/wl_onSurfaceSecondary" />

    <!-- Password label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_xxs"
        android:text="Confirm Password"
        android:textAppearance="@style/TextAppearance.Wellnest.Caption" />

    <!-- Password input -->
    <EditText
        android:id="@+id/passwordInput"
        style="@style/Widget.Wellnest.Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_xl"
        android:hint="Enter your password to confirm"
        android:inputType="textPassword"
        android:autofillHints="password" />

    <!-- Buttons container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Cancel button -->
        <Button
            android:id="@+id/cancelButton"
            style="@style/Widget.Wellnest.Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/wl_space_m"
            android:text="Cancel"
            android:minWidth="100dp" />

        <!-- Delete button -->
        <Button
            android:id="@+id/deleteButton"
            style="@style/Widget.Wellnest.Button.Danger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:minWidth="100dp" />

    </LinearLayout>

</LinearLayout>