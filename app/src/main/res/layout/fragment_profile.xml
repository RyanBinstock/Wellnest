<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wl_surface_yellow"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="32dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:paddingHorizontal="@dimen/wl_space_m"
        app:layout_constraintBottom_toBottomOf="@id/profile_navbar_container">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profile_text_guide_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profile_text_guide_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <ImageView
            android:id="@+id/profile_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_text"
            app:layout_constraintEnd_toEndOf="@id/profile_text_guide_right"
            app:layout_constraintStart_toStartOf="@id/profile_text_guide_left"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/profile_help_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/wl_space_xs"
            android:background="@drawable/bg_round_button"
            android:contentDescription="@string/profile_help_button_cd"
            android:padding="@dimen/wl_space_xs"
            android:scaleType="centerInside"
            android:src="@drawable/info_icon"
            android:tint="@color/wl_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_text"
            app:layout_constraintBottom_toBottomOf="@id/profile_text" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_text">

            <ImageView
                android:id="@+id/profile_name_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_name_field"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_name"
                style="@style/TextAppearance.Wellnest.OutlinedSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/wl_space_m"
                android:text="name"
                app:layout_constraintBottom_toBottomOf="@id/profile_name_image"
                app:layout_constraintEnd_toEndOf="@id/profile_name_image"
                app:layout_constraintTop_toTopOf="@id/profile_name_image" />

            <ImageView
                android:id="@+id/profile_email_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wl_space_s"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_email_field"
                app:layout_constraintTop_toBottomOf="@id/profile_name_image" />

            <TextView
                android:id="@+id/profile_email"
                style="@style/TextAppearance.Wellnest.OutlinedSmall"
                android:layout_width="@dimen/profile_input_width"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/wl_space_m"
                android:text="email"
                app:layout_constraintBottom_toBottomOf="@id/profile_email_image"
                app:layout_constraintEnd_toEndOf="@id/profile_email_image"
                app:layout_constraintTop_toTopOf="@id/profile_email_image" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/sign_out_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_sign_out_button"
            app:layout_constraintBottom_toTopOf="@id/delete_account_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextAppearance.Wellnest.Title.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            app:layout_constraintBottom_toBottomOf="@id/sign_out_account_button"
            app:layout_constraintEnd_toEndOf="@id/sign_out_account_button"
            app:layout_constraintStart_toStartOf="@+id/sign_out_account_button"
            app:layout_constraintTop_toTopOf="@id/sign_out_account_button" />

        <ImageButton
            android:id="@+id/delete_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wl_space_m"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_delete_account_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextAppearance.Wellnest.Title.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            app:layout_constraintBottom_toBottomOf="@id/delete_account_button"
            app:layout_constraintEnd_toEndOf="@id/delete_account_button"
            app:layout_constraintStart_toStartOf="@+id/delete_account_button"
            app:layout_constraintTop_toTopOf="@id/delete_account_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/profile_navbar_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>