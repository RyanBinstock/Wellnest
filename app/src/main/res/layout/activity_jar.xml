<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jar_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- FULL BACKGROUND -->
    <ImageView
        android:id="@+id/bgScene"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_jar_scene"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SCORE SIGN -->
    <ImageView
        android:id="@+id/scoreSign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/jar_scoreboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- SCORE TEXT (centered on sign) -->
    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6,582"
        android:textColor="@android:color/white"
        android:textSize="64sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/scoreSign"
        app:layout_constraintBottom_toBottomOf="@id/scoreSign"
        app:layout_constraintStart_toStartOf="@id/scoreSign"
        app:layout_constraintEnd_toEndOf="@id/scoreSign"/>

    <!-- CATEGORY BUTTONS CONTAINER -->
    <LinearLayout
        android:id="@+id/categoryContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoreSign"
        app:layout_constraintWidth_percent="0.6">

        <!-- EXPLORE -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/btnExplore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/jar_chip_explore" />

            <TextView
                android:id="@+id/txtExplore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/explore"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="80dp"/>
        </FrameLayout>

        <!-- NIGHTLIFE -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/btnNightlife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/jar_chip_nightlife" />

            <TextView
                android:id="@+id/txtNightlife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nightlife"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="80dp"/>
        </FrameLayout>

        <!-- PLAY -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/btnPlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/jar_chip_play" />

            <TextView
                android:id="@+id/txtPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="80dp"/>
        </FrameLayout>

        <!-- COZY -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/btnCozy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/jar_chip_cozy" />

            <TextView
                android:id="@+id/txtCozy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cozy"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="80dp"/>
        </FrameLayout>

        <!-- CULTURE -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnCulture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/jar_chip_culture" />

            <TextView
                android:id="@+id/txtCulture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/culture"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="80dp"/>
        </FrameLayout>

    </LinearLayout>

    <!-- ðŸ¦ HUMMINGBIRD -->
    <ImageView
        android:id="@+id/imgBird"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:src="@drawable/jar_bird"
        android:adjustViewBounds="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- â¬… HOME PILL BUTTON -->
    <Button
        android:id="@+id/btnHome"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_home_button"
        android:elevation="4dp"
        android:includeFontPadding="false"
        android:text="@string/home"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
