<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background -->
    <ImageView
        android:id="@+id/ivForestBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_roamio_forest"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Content gutters -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.07"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.93"
        android:orientation="vertical"/>

    <!-- Leafy header plaque -->
    <FrameLayout
        android:id="@+id/headerPlaque"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd"
        app:layout_constraintWidth_percent="0.645"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_roamio_plaque"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/tvSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1,284"
            android:textColor="#2F5C33"
            android:textSize="45sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- Daily Progress text -->
    <TextView
        android:id="@+id/tvDailyProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Progress"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/headerPlaque"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd"
        app:layout_constraintWidth_percent="0.66"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"/>

    <!-- Shiny progress frame + real progress -->
    <FrameLayout
        android:id="@+id/progressWrap"
        android:layout_width="0dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toBottomOf="@id/tvDailyProgress"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd"
        app:layout_constraintWidth_percent="0.80"
        android:layout_marginTop="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/progress_roamio_frame"
            android:scaleType="fitXY"/>

        <ProgressBar
            android:id="@+id/pbDaily"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/ro_progress_fill"
            android:indeterminate="false"
            android:background="@android:color/transparent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>
    </FrameLayout>

    <!-- Journey card -->
    <LinearLayout
        android:id="@+id/llRouteCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ro_card"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/progressWrap"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd"
        app:layout_constraintWidth_percent="0.86"
        android:layout_marginTop="14dp">

        <!-- Header row with icon + title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_roamio_map" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Journey For Today"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#2F5C33" />
        </LinearLayout>

        <!-- Inner rounded panel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ro_badge"
            android:layout_marginTop="8dp"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvRouteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Templin Gardens"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#23443A" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance:"
                    android:textStyle="bold"
                    android:textColor="#D4A574" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 4km"
                    android:textColor="#D4A574" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty:"
                    android:textStyle="bold"
                    android:textColor="#D4A574" />

                <TextView
                    android:id="@+id/tvDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Easy"
                    android:textColor="#D4A574" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Start Walk -->
    <Button
        android:id="@+id/btnStartWalk"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Start Walk"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#2F5C33"
        android:background="@drawable/ro_pill_button"
        app:layout_constraintTop_toBottomOf="@id/llRouteCard"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd"
        app:layout_constraintWidth_percent="0.66"
        android:layout_marginTop="14dp"/>

    <ImageView
        android:id="@+id/ivBirdComplete"
        android:layout_width="96dp"
        android:layout_height="102dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/roamio_babybird_idle"
        app:layout_constraintBottom_toTopOf="@id/btnHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Home pill â€“ bottom-right -->
    <Button
        android:id="@+id/btnHome"
        android:layout_width="92dp"
        android:layout_height="42dp"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="#2F5C33"
        android:textStyle="bold"
        android:background="@drawable/ro_home_pill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
