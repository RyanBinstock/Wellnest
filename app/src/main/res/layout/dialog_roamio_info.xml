<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_card"
    android:orientation="vertical"
    android:padding="@dimen/wl_space_l">

    <!-- Title Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_m"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Walk Information"
            android:textAppearance="@style/TextAppearance.Wellnest.Title" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:scaleType="fitCenter"
            android:src="@drawable/exit_icon" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_m">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Description Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/wl_space_xs"
                android:text="Description"
                android:textAppearance="@style/TextAppearance.Wellnest.Body"
                android:textStyle="bold"
                android:textColor="@color/wl_onSurface" />

            <!-- Description -->
            <TextView
                android:id="@+id/walkDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/wl_space_l"
                android:text="Walk description goes here"
                android:textAppearance="@style/TextAppearance.Wellnest.Body"
                android:textColor="@color/wl_onSurfaceSecondary" />

            <!-- Verification Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/wl_space_xs"
                android:text="How it's Verified"
                android:textAppearance="@style/TextAppearance.Wellnest.Body"
                android:textStyle="bold"
                android:textColor="@color/wl_onSurface" />

            <!-- Verification Details -->
            <TextView
                android:id="@+id/verificationDetailsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/wl_space_l"
                android:text="To verify this walk, you must be within 50 meters of the destination."
                android:textAppearance="@style/TextAppearance.Wellnest.Body"
                android:textColor="@color/wl_onSurfaceSecondary" />

        </LinearLayout>
    </ScrollView>

    <!-- OK button -->
    <Button
        android:id="@+id/okButton"
        style="@style/Widget.Wellnest.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Got it!" />

</LinearLayout>