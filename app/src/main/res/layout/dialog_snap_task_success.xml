<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_card"
    android:orientation="vertical"
    android:padding="@dimen/wl_space_l"
    android:gravity="center_horizontal">

    <!-- Success Icon -->
    <ImageView
        android:layout_width="@dimen/wl_icon_xlarge"
        android:layout_height="@dimen/wl_icon_xlarge"
        android:layout_marginBottom="@dimen/wl_space_m"
        android:src="@drawable/star_icon"
        android:scaleType="centerInside" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_s"
        android:text="Task Completed!"
        android:textAppearance="@style/TextAppearance.Wellnest.Title"
        android:gravity="center" />

    <!-- Points earned message -->
    <TextView
        android:id="@+id/pointsEarnedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_l"
        android:text="You earned 10 points!"
        android:textAppearance="@style/TextAppearance.Wellnest.Body"
        android:textColor="@color/wl_primary"
        android:gravity="center" />

    <!-- Congratulations message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_xl"
        android:text="Great job! Your before and after photos show excellent progress."
        android:textAppearance="@style/TextAppearance.Wellnest.Caption"
        android:textColor="@color/wl_onSurfaceSecondary"
        android:gravity="center" />

    <!-- Continue button -->
    <Button
        android:id="@+id/continueButton"
        style="@style/Widget.Wellnest.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue" />

</LinearLayout>