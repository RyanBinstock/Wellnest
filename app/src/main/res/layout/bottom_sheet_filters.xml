<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_filter_sheet"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/txtFilterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Options"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:includeFontPadding="false" />

        <!-- Row of three filter options -->
        <LinearLayout
            android:id="@+id/filterRow"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Friends -->
            <LinearLayout
                android:id="@+id/filterFriends"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/iconFriends"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_filter_friends_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friends"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:includeFontPadding="false"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Solo -->
            <LinearLayout
                android:id="@+id/filterSolo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/iconSolo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_filter_solo_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solo"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:includeFontPadding="false"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Family -->
            <LinearLayout
                android:id="@+id/filterFamily"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/iconFamily"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_filter_family_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:includeFontPadding="false"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/txtFilterDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some description about the selected filter option"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <!-- Apply button -->
        <Button
            android:id="@+id/btnApplyFilters"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="APPLY FILTERS"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
