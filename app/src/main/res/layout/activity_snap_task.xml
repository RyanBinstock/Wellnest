<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  Background  -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/snap_task_bg_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:src="@drawable/snap_task_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!--  /Background  -->

    <!--  Scorecard  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/wl_space_m"
        android:paddingTop="32dp"
        android:paddingBottom="@dimen/wl_space_m"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/snap_task_score_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/snap_task_score_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/snap_task_score_text"
                style="@style/TextAppearance.Wellnest.Scorecard.SnapTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:includeFontPadding="false"
                android:text="6582"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/snap_task_score_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wl_space_xxs"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/wl_space_m">

            <TextView
                style="@style/TextAppearance.Wellnest.MicroApp.ProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daily_progress" />

            <com.code.wlu.cp470.wellnest.ui.components.WellnestProgressBar
                android:id="@+id/snap_task_progress_bar"
                style="@style/Widget.Wellnest.ProgressBar"
                android:layout_marginBottom="@dimen/wl_space_l"
                app:wl_max="100"
                app:wl_progress="65" />


        </LinearLayout>

    </LinearLayout>
    <!--  /Scorecard  -->

    <!--  Recycler  -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/snap_task_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/wl_space_m"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />
    <!--  /Recycler  -->

    <!--  Home Button  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/snap_task_back_button"
        android:layout_width="@dimen/snap_task_back_button_width"
        android:layout_height="@dimen/snap_task_back_button_height"
        android:layout_margin="@dimen/wl_space_l"
        android:background="#FFFFFF"
        android:clickable="true"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="@style/TextAppearance.Wellnest.MicroApp.HomeButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:text="@string/home_button_text" />

    </androidx.cardview.widget.CardView>
    <!--  /Home Button  -->

    <!--  Character  -->
    <ImageView
        android:layout_width="@dimen/snap_task_hero_width"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/character_shadow"
        android:translationY="-25dp"
        app:layout_constraintEnd_toEndOf="@+id/snap_task_character"
        app:layout_constraintStart_toStartOf="@+id/snap_task_character"
        app:layout_constraintTop_toBottomOf="@+id/snap_task_character" />

    <ImageView
        android:id="@+id/snap_task_character"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/snap_task_hero_height"
        android:layout_marginLeft="@dimen/wl_space_m"
        android:layout_marginBottom="@dimen/wl_space_m"
        android:adjustViewBounds="true"
        android:src="@drawable/puffin_baby"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>