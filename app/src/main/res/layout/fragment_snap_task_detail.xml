<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_snap_task_detail_gradient"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="@dimen/wl_space_xl">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_snap_task_detail_card_gradient">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wl_space_m"
            android:gravity="center|center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/snap_task_detail_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                app:cardCornerRadius="1000dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:src="@drawable/info_icon" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="@dimen/wl_space_m"
                android:clickable="true"
                app:cardCornerRadius="1000dp">

                <TextView
                    android:id="@+id/snap_task_detail_top_name"
                    style="@style/TextAppearance.Wellnest.MicroApp.SnapTaskDetail_Top_Name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Clean Bed" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/snap_task_detail_exit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                app:cardCornerRadius="1000dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:src="@drawable/exit_icon" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ImageView
            android:id="@+id/snap_task_detail_hero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/snap_task_detail_hero_1"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/wl_space_xl"
                android:paddingVertical="@dimen/wl_space_m">

                <TextView
                    style="@style/TextAppearance.Wellnest.OutlinedMedium.dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Acceptance Criteria" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wl_space_m"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintWidth_percent="0.5">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/snap_task_cardview_before"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/wl_space_m"
                            app:cardBackgroundColor="#4A74DF"
                            app:cardCornerRadius="100dp"
                            app:cardElevation="6dp">

                            <TextView
                                android:id="@+id/before_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="Before"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/acceptance_criteria_text_before"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wl_space_xxs"
                            android:fontFamily="@font/poppins_regular"
                            android:text="This is a description of the before acceptance criteria"
                            android:textColor="@color/wl_onSurface"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintWidth_percent="0.5">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/snap_task_cardview_after"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/wl_space_m"
                            app:cardBackgroundColor="#CBD1E0"
                            app:cardCornerRadius="100dp"
                            app:cardElevation="6dp">

                            <TextView
                                android:id="@+id/after_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="After"
                                android:textColor="#494949"
                                android:textSize="20sp" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/acceptance_criteria_text_after"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wl_space_xxs"
                            android:fontFamily="@font/poppins_regular"
                            android:text="This is a description of the after acceptance criteria"
                            android:textColor="@color/wl_onSurface"
                            android:textSize="14sp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/snap_task_primary_button_card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="@dimen/wl_space_l"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/snap_task_primary_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_snap_task_detail_button_gradient">

            <TextView
                android:id="@+id/snap_task_primary_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_black"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Start Task"
                android:textColor="@color/wl_surface"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>