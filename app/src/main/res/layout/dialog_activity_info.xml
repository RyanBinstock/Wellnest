<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_card"
    android:orientation="vertical"
    android:padding="@dimen/wl_space_l">

    <!-- Emoji Header -->
    <TextView
        android:id="@+id/activityEmoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_s"
        android:gravity="center"
        android:text="âœ¨"
        android:textSize="48sp" />

    <!-- Title -->
    <TextView
        android:id="@+id/activityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_m"
        android:gravity="center"
        android:text="Activity Title"
        android:textAppearance="@style/TextAppearance.Wellnest.Title" />

    <!-- Description -->
    <TextView
        android:id="@+id/activityDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_m"
        android:text="Activity description goes here..."
        android:textAppearance="@style/TextAppearance.Wellnest.Body"
        android:textColor="@color/wl_onSurfaceSecondary" />

    <!-- Address (Optional) -->
    <LinearLayout
        android:id="@+id/addressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_m"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_dialog_map"
            app:tint="@color/wl_primary" />

        <TextView
            android:id="@+id/activityAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123 Activity St"
            android:textAppearance="@style/TextAppearance.Wellnest.Caption"
            android:textColor="@color/wl_onSurfaceSecondary" />
    </LinearLayout>

    <!-- Tags -->
    <TextView
        android:id="@+id/activityTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wl_space_l"
        android:text="#tag1 #tag2"
        android:textAppearance="@style/TextAppearance.Wellnest.Caption"
        android:textColor="@color/wl_primary"
        android:textStyle="italic" />

    <!-- Accept Button -->
    <Button
        android:id="@+id/btnAccept"
        style="@style/Widget.Wellnest.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept (+50 pts)" />

</LinearLayout>