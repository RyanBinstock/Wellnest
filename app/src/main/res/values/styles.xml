<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========= BASE TEXT ========= -->
    <style name="TextAppearance.Wellnest" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/wl_onSurface</item>
    </style>

    <!-- Title (semi-bold) -->
    <style name="TextAppearance.Wellnest.Title" parent="TextAppearance.Wellnest">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/wl_text_title</item>
    </style>

    <style name="TextAppearance.Wellnest.Title.Button">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textSize">@dimen/wl_text_title</item>
        <item name="android:textColor">@color/wl_surface</item>
    </style>

    <!-- Body -->
    <style name="TextAppearance.Wellnest.Body" parent="TextAppearance.Wellnest">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/wl_text_body</item>
    </style>

    <!-- Caption -->
    <style name="TextAppearance.Wellnest.Caption" parent="TextAppearance.Wellnest">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/wl_text_caption</item>
        <item name="android:textColor">@color/wl_onSurfaceSecondary</item>
    </style>

    <!-- Link (medium weight) -->
    <style name="TextAppearance.Wellnest.Link" parent="TextAppearance.Wellnest">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/wl_text_caption</item>
        <item name="android:textColor">@color/wl_primary</item>
    </style>

    <style name="TextAppearance.Wellnest.MicroAppCard">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.Wellnest.MicroAppCard.Title">
        <item name="android:textSize">@dimen/wl_text_title</item>
        <item name="android:textColor">@color/wl_surface</item>
    </style>

    <style name="TextAppearance.Wellnest.MicroAppCard.Subtitle">
        <item name="android:textSize">@dimen/wl_text_subtitle</item>
        <item name="android:textColor">@color/wl_surfaceTranslucent</item>
    </style>

    <style name="TextAppearance.Wellnest.OutlinedMedium">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textColor">#888682</item>
        <item name="android:textSize">@dimen/wl_text_subtitle</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Wellnest.OutlinedMedium.dark">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/wl_text_subtitle</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Wellnest.OutlinedSmall">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textColor">#888682</item>
        <item name="android:textSize">@dimen/wl_text_body</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="TextAppearance.Wellnest.MicroApp.SnapTaskDetail_Top_Name">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/wl_onSurface</item>

    </style>

    <style name="TextAppearance.Wellnest.TaskScore">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:textColor">#485586</item>
        <item name="android:textSize">@dimen/wl_text_subtitle</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Wellnest.Scorecard.SnapTask">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:textColor">#72A4E4</item>
        <item name="android:textSize">60sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Wellnest.ScoreTitle">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:textColor">#485586</item>
        <item name="android:textSize">@dimen/wl_text_subtitle</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="TextAppearance.Wellnest.ScoreSubtitle">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">#C3B8D2</item>
        <item name="android:textSize">@dimen/wl_text_body</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="TextAppearance.Wellnest.MicroApp" />

    <style name="TextAppearance.Wellnest.Scorecard" />

    <style name="TextAppearance.Wellnest.MicroApp.ProgressText">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/wl_text_primary_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="TextAppearance.Wellnest.MicroApp.HomeButtonText">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:textColor">#485586</item>
        <item name="android:textSize">@dimen/wl_text_subtitle</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Wellnest.FriendScore">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textColor">#E7D095</item>
        <item name="android:textSize">@dimen/wl_text_subtitle</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Wellnest.PendingFriendNotificationCount">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textColor">#2259FF</item>
        <item name="android:textSize">@dimen/wl_text_title</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- ========= WIDGETS ========= -->
    <style name="Widget" />

    <style name="Widget.Wellnest" />
    <!-- Input: pill background from drawable -->
    <style name="Widget.Wellnest.Input">
        <item name="android:background">@drawable/shape_input</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/wl_text_body</item>
        <item name="android:textColor">@color/wl_onSurface</item>
        <item name="android:paddingLeft">@dimen/wl_space_l</item>
        <item name="android:paddingRight">@dimen/wl_space_l</item>
        <item name="android:paddingTop">@dimen/wl_space_m</item>
        <item name="android:paddingBottom">@dimen/wl_space_m</item>
    </style>

    <!-- Primary button using a custom background drawable -->
    <style name="Widget.Wellnest.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/wl_button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/wl_text_primary_button</item>
        <item name="android:textColor">@color/wl_onPrimary</item>
        <item name="android:background">@drawable/btn_primary</item>
    </style>

    <!-- Secondary button with transparent background -->
    <style name="Widget.Wellnest.Button.Secondary" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/wl_button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/wl_text_body</item>
        <item name="android:textColor">@color/wl_onSurfaceSecondary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Danger button for destructive actions -->
    <style name="Widget.Wellnest.Button.Danger" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/wl_button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/wl_text_body</item>
        <item name="android:textColor">@color/wl_onPrimary</item>
        <item name="android:background">@drawable/btn_danger</item>
    </style>

    <!-- Card container -->
    <style name="Widget.Wellnest.Card">
        <item name="android:background">@drawable/shape_card</item>
        <item name="android:padding">@dimen/wl_space_l</item>
    </style>

    <!-- ========= PROGRESS BAR ========= -->

    <!-- Base progress bar style with the blue color scheme from design -->
    <style name="Widget.Wellnest.ProgressBar">
        <item name="wl_progressHeight">28dp</item>
        <item name="wl_cornerRadius">@dimen/wl_radius_pill</item>
        <item name="wl_trackColor">@color/wl_progress_track</item>
        <item name="wl_progressColor">@color/wl_progress_fill</item>
        <item name="wl_animationDuration">300</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Large variant for prominent display -->
    <style name="Widget.Wellnest.ProgressBar.Large">
        <item name="wl_progressHeight">36dp</item>
        <item name="wl_animationDuration">400</item>
    </style>

    <!-- Small variant for compact spaces -->
    <style name="Widget.Wellnest.ProgressBar.Small">
        <item name="wl_progressHeight">16dp</item>
        <item name="wl_animationDuration">250</item>
    </style>

    <!-- Accent color variant using yellow -->
    <style name="Widget.Wellnest.ProgressBar.Accent">
        <item name="wl_progressColor">@color/wl_card_yellow</item>
        <item name="wl_trackColor">@color/wl_surface_yellow</item>
    </style>

    <!-- Success variant with green -->
    <style name="Widget.Wellnest.ProgressBar.Success">
        <item name="wl_progressColor">@color/wl_primary</item>
        <item name="wl_trackColor">#E8F5E9</item>
    </style>

    <!-- Alternative light theme -->
    <style name="Widget.Wellnest.ProgressBar.Light">
        <item name="wl_trackColor">@color/wl_progress_track_alt</item>
        <item name="wl_progressColor">@color/wl_progress_fill_alt</item>
    </style>

</resources>
