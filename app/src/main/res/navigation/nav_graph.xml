<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.code.wlu.cp470.wellnest.ui.splash.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splash_to_welcome"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.code.wlu.cp470.wellnest.ui.welcome.WelcomeFragment"
        android:label="Welcome">
        <action
            android:id="@+id/action_welcome_to_auth"
            app:destination="@id/authFragment" />
    </fragment>

    <fragment
        android:id="@+id/authFragment"
        android:name="com.code.wlu.cp470.wellnest.ui.auth.AuthFragment"
        android:label="Auth">
        <!-- default: signup; can be "login" -->
        <argument
            android:name="startMode"
            android:defaultValue="signup"
            app:argType="string" />
        <action
            android:id="@+id/action_auth_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.code.wlu.cp470.wellnest.ui.home.HomeFragment"
        android:label="Home" />

    <!--  Navigation for micro app cards in home fragment  -->
    <fragment
        android:id="@+id/snapTaskFragment"
        android:name="com.code.wlu.cp470.wellnest.ui.snaptask.SnapTaskFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:label="SnapTask">
        <deepLink app:uri="wellnest://snaptask" />
    </fragment>

    <fragment
        android:id="@+id/activityJarFragment"
        android:name="com.code.wlu.cp470.wellnest.ui.activityjar.ActivityJarFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:label="ActivityJar">
        <deepLink app:uri="wellnest://activityjar" />
    </fragment>

    <fragment
        android:id="@+id/roamioFragment"
        android:name="com.code.wlu.cp470.wellnest.ui.roamio.RoamioFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:label="Roamio">
        <deepLink app:uri="wellnest://roamio" />
    </fragment>
    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.code.wlu.cp470.wellnest.ui.friends.FriendsFragment"
        android:label="FriendsFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.code.wlu.cp470.wellnest.ui.profile.ProfileFragment"
        android:label="ProfileFragment" />
</navigation>
